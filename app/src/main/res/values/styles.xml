<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Heading_days_of_the_week">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/gray_waterloo</item>
        <item name="android:fontWeight">700</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:lineHeight">@dimen/_20sdp</item>
        <item name="android:letterSpacing">0.1</item>

    </style>

    <style name="Sub_days">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/violet</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:lineHeight">@dimen/_24sdp</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/violet</item>
        <item name="android:fontWeight">700</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:lineHeight">@dimen/_18sdp</item>
    </style>


    <style name="Paragraph">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:lineHeight">@dimen/_18sdp</item>
